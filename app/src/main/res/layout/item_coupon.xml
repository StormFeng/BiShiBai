<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="149dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:background="@color/window_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:orientation="vertical"
        android:background="@drawable/bg_4radiu_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@color/white"
                android:background="@drawable/bg_4radiu_white"/>

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/icon_wallet_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="3dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="monasea" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_logo1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="28dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="108dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="￥"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:text="5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="仅用于保健品"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#C9556C"
                    android:textSize="18sp"
                    android:text="满减红包"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#C9556C"
                    android:textSize="13sp"
                    android:text="优惠红包"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_Content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_bg66"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:text="使用期限：2016.12.24  - 2017.1.23"/>
    </LinearLayout>

</LinearLayout>