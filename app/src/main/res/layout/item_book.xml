<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="213dp"
    android:background="@color/window_bg"
    android:paddingTop="15dp"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/ll_Item"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_4radiu_white">
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="订单号：789578497589"
                android:textSize="15sp"
                android:textColor="@color/text_bg66"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="13sp"
                android:textColor="@color/text_bg33"
                android:gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:layout_centerVertical="true"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/iv_Good"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@drawable/ic_launcher"
                android:background="@drawable/bg_countview"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="祛痘美白精华套装"
                    android:textSize="13sp"
                    android:textColor="@color/text_bg33"/>
                <TextView
                    android:id="@+id/tv_Count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥899  x1 "
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/text_bg66"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"
                    android:textSize="15sp"
                    android:textColor="@color/text_bg33"/>
                <TextView
                    android:id="@+id/tv_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥899"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/dp_red"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="15dp">
            <Button
                android:id="@+id/btn_Cancel"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="取消订单"
                android:textSize="13sp"
                android:textColor="@color/text_bg33"
                android:background="@drawable/bg_4stroke_grey"/>

            <Button
                android:id="@+id/btn_Confirm"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="立刻支付"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_4radiu_red"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>